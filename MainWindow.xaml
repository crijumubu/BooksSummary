        xmlns:local="clr-namespace:Books_Sumaary"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Fondo.png"/>
        </Grid.Background>
        <Frame Name="mainFrame" NavigationUIVisibility="Hidden" Content=""/>
