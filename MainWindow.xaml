            </Label.RenderTransform>
        </Label>
        <Button Name="btnComenzar" Content="¡Comienza ahora!" HorizontalAlignment="Center" Margin="0,276,0,0" VerticalAlignment="Top" Height="34" Width="134" FontSize="14" FontWeight="Bold" FontStyle="Italic" Background="#FF0A1045" BorderBrush="White" Foreground="White" RenderTransformOrigin="0,0" Click="BtnComenzar_Click"/>
    </Grid>
</Window>
    
